        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/rgAnswers"
            android:layout_gravity="left|center_vertical">

