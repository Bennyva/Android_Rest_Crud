<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="BlueCheck">
        <item name="colorAccent">#1d00ff</item>
    </style>

    <!-- Dialog Styles (Start) -->

    <style name="dialogContainer">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!-- Dark Buttons -->
    <style name="ThemeOverlay.MyDarkButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/blue</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SuccessToast">

        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:colorBackground">#00a000</item>
        <item name="android:radius">4dp</item>  radius for corners of the toast shape
        <item name="android:alpha">175</item>   value between 0-255 where 255 is full solid
        <item name="android:icon">@drawable/ic_check_white_24dp</item>  drawable id of the icon. R.drawable.xx

    </style>


    <style name="WrongToast">

        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:colorBackground">#950202</item>
        <item name="android:radius">4dp</item>  radius for corners of the toast shape
        <item name="android:alpha">175</item>   value between 0-255 where 255 is full solid
        <item name="android:icon">@drawable/ic_mood_bad_white_24dp</item>  drawable id of the icon. R.drawable.xx

    </style>

</resources>


